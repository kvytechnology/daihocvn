<div class='container'>
  <p id="notice"><%= notice %></p>

  <h1>Schools</h1>

  <table class='table'>
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @schools.each do |school| %>
        <tr>
          <td><%= school.name %></td>
          <td><%= link_to 'Show', school %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
